<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Creează tabelul task cu coloana id ca primary key -->
    <changeSet id="1" author="author_name">
        <createTable tableName="task">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Alte coloane pot fi adăugate aici -->
        </createTable>
    </changeSet>

    <!-- Creează tabelul comments cu relația către task -->
    <changeSet id="2" author="author_name">
        <createTable tableName="comments">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="comments"
                                 baseColumnNames="task_id"
                                 referencedTableName="task"
                                 referencedColumnNames="id"
                                 constraintName="fk_comment_task"/>
    </changeSet>

</databaseChangeLog>
